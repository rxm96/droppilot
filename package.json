{
  "name": "droppilot",
  "version": "1.1.4",
  "type": "commonjs",
  "description": "DropPilot - Twitch drops automation with Electron + React + TypeScript",
  "main": "dist-electron/main/index.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier . --check",
    "format:write": "prettier . --write"
  },
  "build": {
    "appId": "com.droppilot.app",
    "productName": "DropPilot",
    "icon": "icons/icon.png",
    "publish": [
      {
        "provider": "github",
        "owner": "rxm96",
        "repo": "droppilot"
      }
    ],
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "icons",
        "to": "icons"
      }
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "electron-updater": "^6.1.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^30.0.0",
    "electron-builder": "^24.6.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.3.3",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.5"
  }
}
