{
  "name": "droppilot",
  "version": "2.1.3-rc.1",
  "type": "commonjs",
  "description": "DropPilot - Twitch drops automation with Electron + React + TypeScript",
  "main": "dist-electron/main/index.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "echo \"Add linter\"",
    "release:patch": "npm version patch -m \"chore(release): v%s\" && git push --follow-tags",
    "release:minor": "npm version minor -m \"chore(release): v%s\" && git push --follow-tags",
    "release:major": "npm version major -m \"chore(release): v%s\" && git push --follow-tags",
    "release:test": "npm version prerelease --preid test -m \"chore(release): v%s\" && git push --follow-tags",
    "release:rc:start": "npm version prepatch --preid rc -m \"chore(release): v%s\" && git push --follow-tags",
    "release:rc": "npm version prerelease --preid rc -m \"chore(release): v%s\" && git push --follow-tags"
  },
  "build": {
    "appId": "com.droppilot.app",
    "productName": "DropPilot",
    "icon": "icons/icon.png",
    "publish": [
      {
        "provider": "github",
        "owner": "rxm96",
        "repo": "droppilot"
      }
    ],
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "icons",
        "to": "icons"
      }
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "artifactName": "DropPilot-Setup-${version}.${ext}",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false
    }
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "electron-updater": "^6.1.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.2.2",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "electron": "^30.0.0",
    "electron-builder": "^24.6.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^4.0.18"
  }
}
